            tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

        <RelativeLayout
            android:id="@+id/innerLayout3"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn3_avatar"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn1_avatar"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/textview8"
                android:layout_width="61dp"
                android:layout_height="19dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="62dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:src="@drawable/btn4_groupname"
                android:text="새 그룹1"
                android:textColor="#FF5722"
                android:textSize="16sp"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

            <ImageView
                android:id="@+id/textView9"
                android:layout_width="69dp"
                android:layout_height="14dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="62dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:src="@drawable/btn4_plant"
                android:text="식물1, 식물3"
                android:textColor="#FF5722"
                android:textSize="16sp"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />


