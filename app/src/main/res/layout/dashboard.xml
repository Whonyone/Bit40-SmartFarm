<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@drawable/dashboard_background">

        <ImageButton
            android:id="@+id/button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/setting_byn"
            android:text="버튼 1"
            tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

        <ImageView
            android:id="@+id/textview1"
            android:layout_width="54dp"
            android:layout_height="14dp"
            android:layout_alignBaseline="@id/button"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="153dp"
            android:layout_marginStart="154dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="156dp"
            android:src="@drawable/dashboard"
            android:text="고정된 배경 영역"
            tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/transparent"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="11dp"
            app:srcCompat="@drawable/new_plant_btn"
            tools:ignore="ContentDescription,RtlHardcoded" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/main"
        android:layout_marginTop="3dp"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical|start"
            android:background="@drawable/card_background"
            android:text="버튼1"
            android:textSize="16sp"
            tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

        <RelativeLayout
            android:id="@+id/innerLayout"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/ImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/btn1_avatar"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/textview2"
                android:layout_width="43dp"
                android:layout_height="19dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="59dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:src="@drawable/btn1_name"
                android:text="이미지버튼"
                android:textColor="#FF5722"
                android:textSize="16sp"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

            <ImageView
                android:id="@+id/textView3"
                android:layout_width="56dp"
                android:layout_height="14dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="59dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:src="@drawable/btn1_plant"
                android:text="텍스트"
                android:textColor="#FF5722"
                android:textSize="16sp"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonContainer1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/buttonContainer"
        android:layout_marginTop="3dp"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/card_background"
            android:gravity="center_vertical|start"
            android:text="버튼2"
            android:textSize="16sp"
            tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

        <RelativeLayout
            android:id="@+id/innerLayout1"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/ImageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/btn2_avatar"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/textview1010"
                android:layout_width="43dp"
                android:layout_height="19dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:src="@drawable/btn2_name"

