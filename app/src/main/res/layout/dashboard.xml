                android:textSize="16sp"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

            <ImageView
                android:id="@+id/textview32"
                android:layout_width="23dp"
                android:layout_height="14dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="59dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:src="@drawable/btn2_plant"
                android:text="텍스트"
                android:textColor="#FF5722"
                android:textSize="16sp"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonContainer2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/buttonContainer1"
        android:layout_marginTop="3dp">

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/card_background"
            android:gravity="center_vertical|start"
            android:text=""
            tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

        <RelativeLayout
            android:id="@+id/innerLayout2"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/btn3_avatar"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/textview230"
                android:layout_width="43dp"
                android:layout_height="19dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="59dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:src="@drawable/btn3_name"
                android:text="이미지버튼"
                android:textColor="#FF5722"
                android:textSize="16sp"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

            <ImageView
                android:id="@+id/textView130"
                android:layout_width="56dp"
                android:layout_height="14dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="59dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:src="@drawable/btn3_plant"
                android:text="텍스트"
                android:textColor="#FF5722"
                android:textSize="16sp"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonContainer3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
