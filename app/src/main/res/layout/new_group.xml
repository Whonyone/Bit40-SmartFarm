<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/newgroup_background">

        <ImageButton
            android:id="@+id/button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/back_btn"
            android:text="버튼 1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="12dp"
            tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

        <ImageView
            android:id="@+id/textview1"
            android:layout_width="54dp"
            android:layout_height="14dp"
            android:src="@drawable/myplant"
            android:layout_alignBaseline="@id/button"

            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="154dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="156dp"
            android:text="고정된 배경 영역"
            tools:ignore="ContentDescription,HardcodedText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_below="@id/main"
        android:layout_marginTop="3dp"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/card_background"
            android:gravity="center_vertical|start"
            android:text=""
            android:textSize="16sp"
            tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

        <RelativeLayout
            android:id="@+id/innerLayout"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/ImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn1_avatar"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/textview2"
                android:layout_width="43dp"
                android:layout_height="19dp"
                android:src="@drawable/btn1_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="66dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="이미지버튼"
                android:textColor="#FF5722"
                android:textSize="16sp"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

            <ImageView
                android:id="@+id/textView3"
                android:layout_width="56dp"
                android:layout_height="14dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="68dp"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:src="@drawable/btn1_plant"
                android:text="텍스트"
                android:textColor="#FF5722"
                android:textSize="16sp"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonContainer1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/buttonContainer"
        android:layout_marginTop="3dp"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/card_background"
            android:gravity="center_vertical|start"
            android:text="버튼2"
            android:textSize="16sp"
            tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

        <RelativeLayout
            android:id="@+id/innerLayout1"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/ImageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn2_avatar"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/textview1010"
                android:layout_width="43dp"
                android:layout_height="19dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:src="@drawable/btn2_name"
                android:text="이미지버튼"
                android:textColor="#FF5722"
                android:textSize="16sp"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

            <ImageView
                android:id="@+id/textview32"
                android:layout_width="23dp"
                android:layout_height="14dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="69dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:src="@drawable/btn2_plant"
                android:text="텍스트"
                android:textColor="#FF5722"
                android:textSize="16sp"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonContainer2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/buttonContainer1"
        android:layout_marginTop="3dp">

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/card_background"
            android:drawableLeft="@drawable/my_image"
            android:gravity="center_vertical|start"
            android:text="버튼3"
            tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

        <RelativeLayout
            android:id="@+id/innerLayout2"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn3_avatar"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/textview230"
                android:layout_width="43dp"
                android:layout_height="19dp"
                android:src="@drawable/btn3_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:text="이미지버튼"
                android:textColor="#FF5722"
                android:textSize="16sp"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

            <ImageView
                android:id="@+id/textView130"
                android:layout_width="56dp"
                android:layout_height="14dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:src="@drawable/btn3_plant"
                android:text="텍스트"
                android:textColor="#FF5722"
                android:textSize="16sp"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

        </RelativeLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/buttonBottomCenter"
        android:layout_width="340dp"
        android:layout_height="56dp"
        android:src="@drawable/newgroup_chat_btn"
        android:text="하단 중앙 버튼"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        tools:ignore="ContentDescription,HardcodedText" />

</RelativeLayout>